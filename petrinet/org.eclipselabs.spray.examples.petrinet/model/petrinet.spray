class Place {
	shape PlaceShape {
		name into placeText
		reference tokens into tokensCompartment
	}
	references {
		targetTransitions : connection
	}
	behavior {
		create into places palette "Shapes" askFor name
	}
}

class Transition {
	shape TransitionShape {
		name into transitionText
	}
	references {
		targetPlaces : connection
	}
	behavior {
		create into transitions palette "Shapes" askFor name
	}
}

class Token {
	shape TokenShape
	behavior {
		create palette "Shapes"
	}
}