import PetrinetDSL.*
 
diagram petrinet for Petrinet style PetrinetDefaultStyle 

class Place {
	shape PlaceShape {
		name into placeText
		reference tokens into tokensCompartment
	}
	behavior {
		create into models palette "Shapes"
	}
}

class Transition {
	shape TransitionShape {
		name into transitionText
	}
	behavior {
		create into models palette "Shapes"
	}
}

class Token {
	shape TokenShape
	behavior {
		create palette "Shapes"
	}
}

class PTEdge { 
	connection ArrowConnection {
		from fromPlace
		to toTransition
	}
	behavior {
		create into models palette "Edges" 
	}
}
